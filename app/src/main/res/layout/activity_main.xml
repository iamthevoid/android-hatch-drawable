<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Red"
                    android:textAllCaps="true"
                    android:textColor="@android:color/black"
                    android:textSize="16dp" />

                <SeekBar
                    android:id="@+id/seek_red"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="88dp"
                    android:layout_marginRight="40dp" />

                <ImageView
                    android:id="@+id/red_col"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:padding="2dp"
                    android:src="#f00" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Green"
                    android:textAllCaps="true"
                    android:textColor="@android:color/black"
                    android:textSize="16dp" />

                <SeekBar
                    android:id="@+id/seek_green"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="88dp"
                    android:layout_marginRight="40dp" />

                <ImageView
                    android:id="@+id/green_col"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:padding="2dp"
                    android:src="#0f0" />

            </FrameLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Blue"
                    android:textAllCaps="true"
                    android:textColor="@android:color/black"
                    android:textSize="16dp" />

                <SeekBar
                    android:id="@+id/seek_blue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="88dp"
                    android:layout_marginRight="40dp" />

                <ImageView
                    android:id="@+id/blue_col"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="end"
                    android:background="#fff"
                    android:padding="2dp"
                    android:src="#00f" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="ANGLE"
                    android:textAllCaps="true"
                    android:textColor="@android:color/black"
                    android:textSize="16dp" />

                <SeekBar
                    android:id="@+id/seek_angle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="88dp"
                    android:layout_marginRight="40dp" />

                <TextView
                    android:textColor="@android:color/black"
                    android:textSize="16dp"
                    android:fontFamily="sans-serif-medium"
                    tools:text="360"
                    android:gravity="center"
                    android:id="@+id/angle_tv"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="end"
                    android:background="#fff"
                    android:padding="2dp"
                    android:src="#00f" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Spacing"
                    android:textAllCaps="true"
                    android:textColor="@android:color/black"
                    android:textSize="16dp" />

                <SeekBar
                    android:id="@+id/seek_spacing"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="88dp"
                    android:layout_marginRight="40dp" />

                <TextView
                    android:textColor="@android:color/black"
                    android:textSize="16dp"
                    android:fontFamily="sans-serif-medium"
                    tools:text="64"
                    android:gravity="center"
                    android:id="@+id/spacing_tv"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="end"
                    android:background="#fff"
                    android:padding="2dp"
                    android:src="#00f" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Line Width"
                    android:textAllCaps="true"
                    android:textColor="@android:color/black"
                    android:textSize="16dp" />

                <SeekBar
                    android:id="@+id/seek_width"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="88dp"
                    android:layout_marginRight="40dp" />

                <TextView
                    android:textColor="@android:color/black"
                    android:textSize="16dp"
                    android:fontFamily="sans-serif-medium"
                    tools:text="64"
                    android:gravity="center"
                    android:id="@+id/width_tv"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="end"
                    android:background="#fff"
                    android:padding="2dp" />

            </FrameLayout>



        <FrameLayout
            android:id="@+id/color_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="8dp"
            tools:background="#bfa8c4">

            <TextView
                android:id="@+id/color_preview_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-medium"
                android:text="Color"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="20dp" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/hatch"
            android:layout_marginRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="96dp" />

    </LinearLayout>

</ScrollView>